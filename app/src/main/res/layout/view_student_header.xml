<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#BBDDFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 이름 -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- 로그아웃 버튼 (오른쪽 상단) -->
        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:padding="6dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:focusable="true" />

        <!-- 학년 / 과목명반 -->
        <TextView
            android:id="@+id/tvClassInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginTop="4dp"
            android:text="2학년 C언어반"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <!-- 등록일 라벨 -->
        <TextView
            android:id="@+id/tvEnrollDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvClassInfo"
            android:layout_marginTop="12dp"
            android:text="등록일"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <!-- 등록일 값 -->
        <TextView
            android:id="@+id/tvEnrollDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvEnrollDateLabel"
            android:layout_alignBaseline="@id/tvEnrollDateLabel"
            android:layout_marginStart="8dp"
            android:text="2025.10.01"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <!-- 학생 ID (사용 안 하면 GONE 처리) -->
        <TextView
            android:id="@+id/tvStudentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEnrollDateLabel"
            android:layout_marginTop="8dp"
            android:text="학번"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
